{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AuditoriumX",
  "version": "0.1.0",
  "identifier": "com.auditoriumx.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AuditoriumX - Offline Booking System",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://localhost:* https://localhost:*;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../backend/prisma/dev.db"
    ],
    "externalBin": [],
    "copyright": "Â© 2024 AuditoriumX. All rights reserved.",
    "category": "Business",
    "shortDescription": "Offline Movie Ticket Booking System",
    "longDescription": "A comprehensive offline movie ticket booking system with BMS integration, PDF generation, and real-time seat management."
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APPDATA/AuditoriumX/**", "$APPDATA/AuditoriumX/database/**"],
        "requireLiteralLeadingDot": false,
        "directories": ["$APPDATA/AuditoriumX"]
      }
    },
    "shell": {
      "scope": {
        "allow": ["npm", "node", "powershell", "cmd", "cargo"]
      }
    }
  }
}
