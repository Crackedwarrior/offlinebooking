{
  "appId": "com.auditoriumx.app",
  "productName": "AuditoriumX",
  "directories": {
    "output": "dist-electron-installer",
    "buildResources": "build"
  },
  "asar": false,
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "!node_modules/.cache/**/*",
    "!node_modules/electron/**/*",
    "!node_modules/electron-builder/**/*"
  ],
  "extraResources": [
    {
      "from": "backend-dist",
      "to": "backend",
      "filter": ["**/*"]
    }
  ],

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "requestedExecutionLevel": "requireAdministrator",
    "signAndEditExecutable": false,
    "icon": "build/movie.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AuditoriumX",
    "artifactName": "AuditoriumX-Setup.exe"
  },
  "portable": {
    "artifactName": "AuditoriumX-Portable.exe"
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": "AppImage",
    "category": "Office"
  },
  "publish": null
}
