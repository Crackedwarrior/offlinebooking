{
  "name": "offlinebooking",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:web": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:desktop": "dev-desktop.bat",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "tauri:desktop": "cd frontend && npm run tauri:dev",
    "build": "cd frontend && npm run build",
    "tauri:dev": "cd frontend && npm run tauri:dev",
    "tauri:build": "cd frontend && npm run tauri:build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Crackedwarrior/offlinebooking.git"
  },
