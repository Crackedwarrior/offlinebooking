{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "baseUrl": "../",
    "paths": {
      "*": ["node_modules/*", "backend/node_modules/*"]
    }
  },
  "include": ["src/**/*"]
} 